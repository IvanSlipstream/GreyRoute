<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gmsworldwide.kharlamov.greyroute.fragments.AnalyzeInboxFragment"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="@string/choose_period_to_analyze"/>

    <TextView
        android:id="@+id/tv_period_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/period_last_hour"/>

    <SeekBar
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="3"
        android:progress="0"
        android:id="@+id/sb_inbox_count" />

    <Button
        android:id="@+id/btn_start_analyze_inbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/analyze" />

</LinearLayout>
